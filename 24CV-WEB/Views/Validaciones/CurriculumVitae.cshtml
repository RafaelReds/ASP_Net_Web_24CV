@model _24CV_WEB.Models.Curriculum;


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Currículum Vitae</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>

    <div class="container mt-4">
        <div class="card">
            <div class="card-header bg-primary text-white text-center">
                <h2 class="display-4"><strong>Tu Curriculum</strong></h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <h4 class="mb-3">Datos de Contacto</h4>
                        <ul class="list-group">
                            <li class="list-group-item"><strong>Nombre:</strong> @Model.Nombre  @Model.Apellidos|</li>
                            <li class="list-group-item"><strong>Fecha de Nacimiento:</strong> 13/10/2001</li>
                            <li class="list-group-item"><strong>Curp:</strong> @Model.CURP</li>
                            <li class="list-group-item"><strong>Teléfono:</strong> (+1) 123-456-7890</li>
                            <li class="list-group-item"><strong>Correo Electrónico:</strong> @Model.Email</li>
                            <li class="list-group-item"><strong>Direccion:</strong> @Model.Dirección</li>


                            <li class="list-group-item"><strong>Nivel de Inglés:</strong> @Model.PorcentajeIngles</li>
                        </ul>
                    </div>
                    <div class="col-md-8 text-center">
                        <h4 class="mb-3">Foto Solicitante</h4>
                        <img src="~/Fotos/@Model.RutaFoto" alt="Foto del solicitante" class="img-fluid rounded-circle" style="border: 2px solid #333; width: 250px; height: 250px;">

                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-md-6">
                        <h4 class="mb-3">Educación</h4>
                        <p><strong>Grado Académico:</strong> Asignatura</p>
                        <p><strong>Fecha de inicio:</strong> 2018 - <strong>Fecha de graduación:</strong> 2022</p>
                    </div>
                    <div class="col-md-6">
                        <h4 class="mb-3">Habilidades</h4>
                        <ul class="list-group">
                            <li class="list-group-item list-group-item-primary">Comunicación Efectiva</li>
                        </ul>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-md-12">
                        <h4 class="mb-3">Descripción</h4>
                        <p>
                            Descripción de @Model.Nombre

                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>