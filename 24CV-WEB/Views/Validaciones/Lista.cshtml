@model IEnumerable<_24CV_WEB.Models.Curriculum>

	<h1></h1>

	<div class="row">
		<div class="col-12">
			<table class="table table-bordered">
				<thead>
					<tr>
						<th>Nombre</th>
					    <th>Apellidos</th>
					    <th>Fecha de Nacimiento</th>
					    <th>CURP</th>
					    <th>Image Path</th>
					    <th>Foto</th>
					</tr>
				</thead>

				<tbody>
					@foreach (var item in Model)
				{
					<tr>
						<td>@item.Nombre</td>
						<td>@item.Apellidos</td>
						<td>@item.FechaNacimiento</td>
						<td>@item.CURP</td>
						<td>@item.RutaFoto</td>

						<td> 
							@if(!string.IsNullOrEmpty(item.RutaFoto))
							{
								<img src="~/Fotos/@item.RutaFoto" width="150" height="150" />
							}

							
						</td>

						<td>
							<a href="@Url.Action("CurriculumVitae", "Validaciones", new { id = item.Id })" class="btn btn-primary">Ver CV</a>
							<a href="@Url.Action("Editar", "Validaciones", new { id = item.Id })" class="btn btn-primary">Editar CV</a>
                        </td>

					</tr>
				}
			</tbody>


			</table>


		</div>
	</div>